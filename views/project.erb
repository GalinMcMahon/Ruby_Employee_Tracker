<h1>Adidas Company HR Management Division: <%= @division.name() %></h1>
<hr>

<h2>Project name: <%= @project.name() %></h2>
  <form action="/rename_project/<%= @project.id %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <label for="name">Rename your project:</label>
    <input id="name" name="name" type="text">
    <button type="submit" class="btn btn-success">Update</button>
  </form>
  <br><br>

  <form action="/delete_project/<%= @project.id %>" method="post">
    <input name="_method" type="hidden" value="delete">
    <label for="name">Delete <%=@project.name %>:</label>
    <button type="submit" class="btn btn-danger">Delete project</button>
  </form>
  <hr>

<h3>Employees in this division:</h3>
  <% if @employees.any? %>
    <ul>
      <% @employees.each do |employee| %>
        <li><a href="/employee/<%= employee.id()%>"><%= employee.name() %></a> </li>
      <% end %>
    </ul>
  <% else %>
    <p> There are no employees assigned to <%= @project.name() %>. </p>
  <% end %>

<h3>Add an Employee</h3>
  <form action='/add_to_project' method='post'>
    <label for='name'>Select an Employee</label>
    <select id='name' name='name' type='text'>
      <% @employees.each do |employee| %>
      <option value='<%= employee.id%>'> <%= employee.name %> </option>
      <% end %>
    </select>
    <br>
    <button type='submit' class='btn btn-default'>Add to Project</button>
  </form>





