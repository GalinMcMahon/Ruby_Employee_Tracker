<h1>Adidas Company Employee: <%= @employee.name() %></h1>

<form action="/rename_employee/<%= @employee.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename employee:</label>
  <input id="name" name="name" type="text">
  <button type="submit" class="btn btn-success">Update</button>
</form>
<br><br>

<form action="/delete_employee/<%= @employee.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <label for="name">Delete <%=@employee.name %>:</label>
  <button type="submit" class="btn btn-danger">Delete employee</button>
</form>

<a href="/">Home</a>
